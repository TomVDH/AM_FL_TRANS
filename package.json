{
  "name": "am-translations-helper",
  "version": "2.0.0",
  "description": "A React TypeScript application for assisting with translation workflows, supporting Excel file uploads and manual text input.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "excel-to-json": "node scripts/excel-to-json.js",
    "excel-to-csv": "node scripts/excel-to-csv.js",
    "csv-only": "node scripts/excel-to-csv.js",
    "test-readme": "node scripts/test-readme-processing.js",
    "clean": "rm -rf .next node_modules/.cache",
    "clean-build": "npm run clean && npm run build",
    "fresh-start": "rm -rf .next node_modules package-lock.json && npm install && npm run dev",
    "build-and-launch": "npm run clean && npm run build && npm run start"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "22.17.0",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
